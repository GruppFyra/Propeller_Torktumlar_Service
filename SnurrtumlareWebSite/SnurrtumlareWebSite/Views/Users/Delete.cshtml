@model SnurrtumlareWebSite.Models.User

@{
    ViewData["Title"] = "View";
}

<h1>View</h1>

<h3>Are you sure you want to delete this?</h3>
<p>NB: deleting a customer permanently also removes its attached orders! If possible, anonymize customer instead.</p>
<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            First name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            Last name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            Address
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            Zip code
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ZipCode)
        </dd>
        <dt class="col-sm-2">
            City
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class="col-sm-2">
            E-mail
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            Phone number
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
    </dl>


    <form asp-action="Delete" asp-route-id="@Model.UserId" method="post">

        <a id="Input_Style" type="button" class="btn btn-info btn-md" asp-action="Index">Back to List</a>

        <span id="confirmDeleteSpan_@Model.UserId" style="display:none">
            <span>Are you sure you want to delete?</span>

            <button type="submit" class="btn btn-danger btn-md">Yes</button>

            <a href="#" class="btn btn-primary btn-md"
               onclick="confirmDelete('@Model.UserId', false)">No</a>
        </span>

        <span id="deleteSpan_@Model.UserId">
            <a href="#" class="btn btn-danger btn-md"
               onclick="confirmDelete('@Model.UserId', true)">Delete</a>
        </span>
    </form>

</div>
