@model User

@{
    ViewData["Title"] = "ProfileView";
}

<div>
    <h1 class="pos2" style="font-size:300%;">Din profil</h1>

    <center><img src="~/assets/icons/profilpicture.png" alt="Profilgubbe" width="200" height="200" /></center>




    <p class="pos3"> <center>Hej <b>@Model.FirstName</b>, här på din profil kan du ändra dina uppgifter.</center></p>

    <p class="pos3">
        <center>Dina uppgifter</center>
    </p>

</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12" style="text-align: center">
            <form asp-controller="Home" asp-action="UpdateProfile" method="post">
                <table style="width:40%; text-align: left; margin-bottom: 20px; margin: auto" >
                    <thead>
                        <tr>
                            <th>Förnamn</th>
                            @if (Model.FirstName == null)
                            {
                                <td>
                                    <input type="text" placeholder="Förnamn" name="FirstName" value="" />
                                </td>
                            }
                            else
                            {
                                <td>
                                    <input type="text" name="FirstName" value="@Model.FirstName" />
                                </td>
                            }
                        </tr>
                        <tr>
                            <th>Efternamn</th>
                            @if (Model.LastName == null)
                            {
                                <td>
                                    <input type="text" placeholder="Efternamn" name="LastName" value="" />
                                </td>
                            }
                            else
                            {
                                <td>
                                    <input type="text" name="LastName" value="@Model.LastName" />
                                </td>
                            }
                        </tr>
                        <tr><th>Email</th><td>@Model.Email</td></tr>
                        <tr>
                            <th>Telefon</th>
                            @if (Model.Phone == null)
                            {
                                <td>
                                    <input type="text" placeholder="Telefon" name="Phone" value="" />
                                </td>
                            }
                            else
                            {
                                <td>
                                    <input type="text" name="Phone" value="@Model.Phone" />
                                </td>
                            }
                        </tr>
                        <tr>
                            <th>Adress</th>
                            @if (Model.Address == null)
                            {
                                <td>
                                    <input type="text" placeholder="Adress" name="Address" value="" />
                                </td>
                            }
                            else
                            {
                                <td>
                                    <input type="text" name="Address" value="@Model.Address" />
                                </td>
                            }
                        </tr>
                        <tr>
                            <th>Stad</th>
                            @if (Model.City == null)
                            {
                                <td>
                                    <input type="text" placeholder="Stad" name="City" value="" />
                                </td>
                            }
                            else
                            {
                                <td>
                                    <input type="text" name="City" value="@Model.City" />
                                </td>
                            }
                        </tr>
                        <tr>
                            <th>Postnummer</th>
                            @if (Model.ZipCode == null)
                            {
                                <td>
                                    <input type="text" placeholder="Postnummer" name="ZipCode" value="" />
                                </td>
                            }
                            else
                            {
                                <td>
                                    <input type="text" name="Zipcode" value="@Model.ZipCode" />
                                </td>
                            }
                        </tr>
                    </thead>
                </table>
                <div width="100%" style="text-align: center">
                    <button type="submit" class="order-confirmation-button-style" value="@Model.Email, @Model.FirstName, @Model.LastName, @Model.Phone, @Model.Address, @Model.City, @Model.ZipCode">Spara</button>
                </div>
            </form>
        </div>
    </div>
</div>
