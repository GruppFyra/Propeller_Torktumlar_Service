@{
    ViewData["Title"] = "Index";

    if (ViewBag.Admin == 1)
    {
        Layout = "~/Views/Shared/_LayoutBackOffice.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}


<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <p>
                Welcome to the Snurrtumlare AB BackOffice. You can access the following areas:
                <ul>
                    <li>
                        Customers: view customer, create new customer & delete existing customer
                    </li>
                    <li>
                        Orders: view a list of all orders, view customer specific orders, mark active order as delievered
                    </li>
                    <li>
                        Products: view a list of all available products, create new product, update existing product, delete existing product
                    </li>
                    <li>
                        Profile: view your BackOffice user details, change your user password
                    </li>
                </ul>

                Please contact your <a href="mailto:sysadmin@snurrtumlare.se">system administrator</a> if you run into errors or have questions.

                <br>
                <br>

                Please contact your <a href="#bannerformmodal" data-toggle="modal" data-target="#exampleModal">system administrator</a> if you run into errors or have questions.

                @*<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="@mdo">Open modal for @mdo</button>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="@fat">Open modal for @fat</button>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="@getbootstrap">Open modal for @getbootstrap</button>*@
                
                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">New message</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="modal-body">

                        <form>
                          <div class="form-group">
                            <label for="recipient-name" class="col-form-label">Recipient:</label>
                            <input type="text" value="sysadmin@snurrtumlare.se" class="form-control" id="recipient-name">
                          </div>
                          <div class="form-group">
                            <label for="message-text" class="col-form-label">Message:</label>
                            <textarea class="form-control" id="message-text"></textarea>
                          </div>
                        </form>

                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Send message</button>
                      </div>
                    </div>
                  </div>
                </div>

            </p>
        </div>
    </div>
</div>