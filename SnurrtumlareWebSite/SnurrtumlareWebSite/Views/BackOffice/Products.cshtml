@{
    ViewData["Title"] = "Products";
}
@model List<ProductModel>

<style>
    #Input_Style {
        margin: 5px;
    }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <button type="button" class="btn btn-primary">Add new Product</button>
            <br />
            <br />
            <table style="width:100%" class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th>Product ID</th>
                        <th>Product Name</th>
                        <th>Product Description</th>
                        <th>Amount in Stock</th>
                    </tr>
                </thead>

                @foreach (var product in Model)
                {
                <tbody>
                    <tr>
                        <td>@product.ProductId</td>
                        <td>@product.ProductName</td>
                        <td>@product.ProductDescription</td>
                        <td>@product.AmountInStock</td>
                        <td>
                            <div class="form-check-inline">
                                <button id="Input_Style" type="button" class="btn btn-secondary">Edit</button>
                                <button id="Input_Style" type="button" class="btn btn-secondary">Details</button>
                                <button id="Input_Style" type="button" class="btn btn-danger">Delete</button>
                            </div>
                        </td>
                    </tr>
                </tbody>
                }
            </table>
        </div>
    </div>
</div>