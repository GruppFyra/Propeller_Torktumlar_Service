@{
    ViewData["Title"] = "Customers";
}

@model List<CustomerModel>

<style>
    #Input_Style {
        margin: 5px;
    }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <button type="button" class="btn btn-primary">Create Customer</button>
            <br />
            <br />
            <table style="width:100%" class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th>Customer ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Address</th>
                        <th>Zip Code</th>
                        <th>City</th>
                        <th>Email</th>
                        <th>Phone Number</th>
                    </tr>
                </thead>


                <tbody>
                    <tr>
                        @foreach (var item in Model)

                        {
                            <td>@item.CustomerId </td>
                            <td>@item.FirstName </td>
                            <td>@item.LastName </td>
                            <td>@item.Address</td>
                            <td>@item.ZipCode </td>
                            <td>@item.City </td>
                            <td>@item.Email </td>
                            <td>@item.Phone</td>
                        }

                        <td>
                            <div>
                                <button id="Input_Style" type="button" class="btn btn-secondary">Edit</button>
                                <button id="Input_Style" type="button" class="btn btn-secondary">Details</button>
                                <button id="Input_Style" type="button" class="btn btn-danger">Delete</button>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>