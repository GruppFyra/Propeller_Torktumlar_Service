@{
    ViewData["Title"] = "Orders";
}

@model List<OrderModel>

<style>
    #Input_Style {
        margin: 5px;
    }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <br />
            <table style="width:100%" class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th>Customer Id</th>
                        <th>Customer Name</th>
                        <th>Customer Email</th>
                        <th>Product</th>
                        <th>Total Cost</th>
                    </tr>
                </thead>
                @foreach (var order in Model)
                {
                <tbody>
                    <tr>
                        <td></td>
                        <td>@order.Customer.FirstName @order.Customer.LastName</td>
                        <td>@order.Customer.Email</td>
                        <td>@order.ProductsFromCart.ToString()</td>
                        <td>@order.TotalOrderCost</td>
                        <td>
                            <div class="form-check-inline">
                                <button id="Input_Style" type="button" class="btn btn-secondary">Edit</button>
                                <button id="Input_Style" type="button" class="btn btn-secondary">Details</button>
                                <button id="Input_Style" type="button" class="btn btn-danger">Delete</button>
                            </div>
                        </td>
                    </tr>
                </tbody>
                }
            </table>
         </div>
    </div>
</div>