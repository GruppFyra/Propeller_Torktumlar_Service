@model IEnumerable<SnurrtumlareWebSite.Models.User>

@{
    ViewData["Title"] = "Users";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <button type="button" class="btn btn-primary">Create User</button>
            <br />
            <br />
            <table style="width:100%" class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th>User ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Address</th>
                        <th>Zip Code</th>
                        <th>City</th>
                        <th>Email</th>
                        <th>Phone Number</th>
                    </tr>
                </thead>


                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.UserId</td>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.Address</td>
                            <td>@user.ZipCode</td>
                            <td>@user.City</td>
                            <td>@user.Email</td>
                            <td>@user.Phone</td>

                            <td>
                                <div class="form-check-inline">
                                    <button id="Input_Style" type="button" class="btn btn-secondary btn-sm">Edit</button>
                                    <button id="Input_Style" type="button" class="btn btn-secondary btn-sm">Details</button>
                                    <button id="Input_Style" type="button" class="btn btn-danger btn-sm">Delete</button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
